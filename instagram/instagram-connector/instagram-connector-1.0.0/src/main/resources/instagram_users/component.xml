<component name="instagram_users" type="synapse/template">
	<subComponents>
		<component name="getUserInfo">
			<file>getUserInfo.xml</file>
			<description>Get basic information about a user.</description>
		</component>
		<component name="getSelfFeed">
			<file>getSelfFeed.xml</file>
			<description>See the authenticated user's feed.</description>
		</component>
		<component name="getUserMediaRecent">
			<file>getUserMediaRecent.xml</file>
			<description>Get the most recent media published by a user.
			</description>
		</component>
		<component name="getSelfMediaLiked">
			<file>getSelfMediaLiked.xml</file>
			<description>See the authenticated user's list of media they've
				liked.
			</description>
		</component>
		<component name="userSearch">
			<file>userSearch.xml</file>
			<description>Search for a user by name.</description>
		</component>
	</subComponents>
</component>
