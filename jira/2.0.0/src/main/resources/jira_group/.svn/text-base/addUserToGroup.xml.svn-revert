<?xml version="1.0" encoding="UTF-8"?>
<template name="addUserToGroup" xmlns="http://ws.apache.org/ns/synapse">
    <parameter description="a String containing the name of the group" name="groupName"/>
    <parameter description="a String containing the name of the user" name="username"/>
    <sequence>
        <payloadFactory media-type="xml">
            <format>
                <soapenv:Envelope
                    xmlns:soap="http://soap.rpc.jira.atlassian.com"
                    xmlns:soapenc="http://schemas.xmlsoap.org/soap/encoding/"
                    xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/"
                    xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                    <soapenv:Header/>
                    <soapenv:Body>
                        <soap:addUserToGroup soapenv:encodingStyle="http://schemas.xmlsoap.org/soap/encoding/">
                            <in0 xsi:type="xsd:string">?</in0>
                            <in1
                                xmlns:bean="http://beans.soap.rpc.jira.atlassian.com" xsi:type="bean:RemoteGroup">
                                <name xsi:type="xsd:string">$1</name>
                                <users
                                    soapenc:arrayType="bean:RemoteUser[]"
                                    xmlns:jir="http://localhost:PORT/jira/rpc/soap/jirasoapservice-v2" xsi:type="jir:ArrayOf_tns1_RemoteUser"/>
                            </in1>
                            <in2
                                xmlns:bean="http://beans.soap.rpc.jira.atlassian.com" xsi:type="bean:RemoteUser">
                                <email xsi:type="xsd:string"/>
                                <fullname xsi:type="xsd:string"/>
                                <name xsi:type="xsd:string">$2</name>
                            </in2>
                        </soap:addUserToGroup>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args>
                <arg evaluator="xml" expression="$func:groupName"/>
                <arg evaluator="xml" expression="$func:username"/>
            </args>
        </payloadFactory>
        <property action="remove" name="Accept-Encoding" scope="transport"/>
        <property name="SOAPAction" scope="transport" value="urn:mediate"/>
        <property name="messageType" scope="axis2" value="text/xml"/>
        <property name="POST_TO_URI" scope="axis2" type="STRING" value="true"/>
        <log level="full"/>
        <call>
            <endpoint>
                <http format="soap11" method="POST" uri-template="{uri.var.jira.url}/rpc/soap/jirasoapservice-v2"/>
            </endpoint>
        </call>
        <property action="remove" name="NO_ENTITY_BODY" scope="axis2"/>
    </sequence>
</template>
