<component name="evernote-cloud-connector-note" type="synapse/template">

    <subComponents>
        <!--Note-->
        <component name="createNote">
            <file>createNote.xml</file>
            <description>Create a Note</description>
        </component>
        <component name="deleteNote">
            <file>deleteNote.xml</file>
            <description>Moves a single existing Note to the trash</description>
        </component>
        <component name="expungeNote">
            <file>expungeNote.xml</file>
            <description>Permanently removes an existing Note</description>
        </component>
        <component name="getNote">
            <file>getNote.xml</file>
            <description>Retrieves the state of a single Note</description>
        </component>
        <component name="shareNote">
            <file>shareNote.xml</file>
            <description>If this note is not already shared (via its own direct URL), then this will start sharing that note</description>
        </component>
        <component name="stopSharingNote">
            <file>stopSharingNote.xml</file>
            <description>If this note is not already shared then this will stop sharing that note</description>
        </component>
        <component name="updateNote">
            <file>updateNote.xml</file>
            <description>Changes the content or metadata of a single existing Note</description>
        </component>
        <component name="findNotesMetaData">
            <file>findNotesMetaData.xml</file>
            <description>Find Meta data of notes</description>
        </component>

    </subComponents>

</component>
